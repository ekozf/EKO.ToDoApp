@{
    ViewBag.Title = "Log In";
}

<main class="bg-body-tertiary m-3 p-3 rounded-3 shadow mt-5">
    <h1 class="text-center mt-3">Log In</h1>
    <div class="d-flex flex-column align-items-center">
        <input type="email" placeholder="your@email.com" class="form-control mb-3 mt-5" id="userEmail" />
        <input type="password" class="form-control mb-5 mt-3" placeholder="y0urP4ssword!" id="userPassword" />
        <button class="btn btn-primary my-3 w-50" id="loginButton">Log In</button>

        <span class="mt-3 text-muted">
            Don't have an account yet? 
            <a href="/account/register">Register here!</a>
         </span>
    </div>
</main>

@section Scripts {
    <script src="~/js/Account/LoginUser.js" type="module"></script>
}